{
  "root":true,
  "env":{
     "browser":true,
    
     "commonjs": true,
     "es6":true
  },
  "globals":{
     "Promise":"readonly"
  },
  "extends":[
     "eslint:recommended",
     "plugin:prettier/recommended"
  ],
  "ignorePatterns":[
     "node_modules/**/*",
     "dist/**/*"
  ],
  "plugins":[
     "prettier"
  ],
  "parserOptions": {
      "ecmaVersion": 2017,
      "experimentalObjectRestSpread": true,
      "sourceType": "module"
   },
  "rules":{
     "no-console":1,
     "prettier/prettier":2
  },
  "settings":{
     "react":{
        "version":"999.999.999"
     }
  }
}